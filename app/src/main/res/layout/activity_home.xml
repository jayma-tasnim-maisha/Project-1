<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- Toolbar or Header -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:title="Grocio Home"
        android:titleTextColor="@android:color/white" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Grocio!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/toolbar"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Categories/Sections List (Could be a list or buttons for navigation) -->
    <Button
        android:id="@+id/shop_now_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shop Groceries"
        android:layout_below="@id/welcome_text"
        android:layout_margin="16dp"
        android:backgroundTint="#5AE4A7"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View My Orders"
        android:layout_below="@id/shop_now_btn"
        android:layout_margin="16dp"
        android:backgroundTint="#5AE4A7"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/settings_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_below="@id/orders_btn"
        android:layout_margin="16dp"
        android:backgroundTint="#5AE4A7"
        android:textColor="@android:color/white" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#F44336" />

</RelativeLayout>
